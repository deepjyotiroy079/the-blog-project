<%- include('./partials/nav') %>
<div class="row mt-5">
    <div class="col-md-6 mx-auto">
        <div class="card card-body shadow bg-white">
            <h2>Create a blog</h2>
            <form method="POST" action="/dashboard/create" class="mt-4">
                <div class="form-group">
                    <label for="blog_title">Blog Title</label>
                    <input type="text" class="form-control" id="blog_title" placeholder="Blog Title" name="title">
                </div>
                <div class="form-group">
                    <label for="blog_content">Blog Content</label>
                    <textarea class="form-control" id="blog_content" rows="6" name="content"></textarea>
                </div>
                <button type="submit" class="btn btn-success">Create</button>
            </form>
        </div>
    </div>
</div>