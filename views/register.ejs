<div class="row mt-5">
    <div class="col-md-6 mx-auto">
        <div class="card card-body bg-light">
            <h2 class="text-center mb-4">Register</h2>
            <%- include('./partials/message') %>
            <!-- <img class="text-center mb-3" src="https://img.icons8.com/officel/16/000000/add-user-male.png"/> -->
            <form action="/users/register" method="POST">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" name="name" class="form-control" id="name" value="<%= typeof name != 'undefined' ? name : ''%>">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Username</label>
                    <input type="text" name="username" class="form-control" id="username" value="<%= typeof username != 'undefined' ? username : ''%>" aria-describedby="emailHelp">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Password</label>
                    <input type="password" name="password" class="form-control" value="<%= typeof password != 'undefined' ? password : ''%>" id="exampleInputPassword1">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Re-type Password</label>
                    <input type="password" name="password2" class="form-control" value="<%= typeof password2 != 'undefined' ? password2 : ''%>" id="exampleInputPassword1">
                </div>
                <button type="submit" class="btn btn-primary">Register</button>
            </form>
        </div>
    </div>
</div>