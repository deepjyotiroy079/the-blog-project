<%- include('./partials/nav') %>
<p class="text-muted">You are signed in as <strong><%= user.username %></strong></p>
<div class="jumbotron jumbotron-fluid shadow bg-white mt-5 p-5">
    <div class="container">
        <h2>Create Blog</h2>
        <%- include('./partials/message') %>
        <p class="lead">
            You think, we post
        </p>
        <a href="/dashboard/create" class="btn btn-primary">Create a Blog</a>
    </div>
</div>

<div class="jumbotron jumbotron-fluid shadow bg-white mt-5 p-5">
    <div class="container">
        <h2>My Blog</h2>
        <p class="lead">Find all your blogs at one place.</p>

        <div class="list-group">
            <% blogs.forEach(function(item) { %>
                <a href="#" class="list-group-item list-group-item-action flex-column align-items-start">
                    <div class="d-flex w-100 justify-content-between">
                      <h5 class="mb-1"><%= item.title %></h5>
                      <small><%= item.date %></small>
                    </div>
                    <p class="mb-1"><%= item.content %></p>
                    <small><%= item.author %></small>
                  </a>
            <% }); %>     
        </div>
    </div>
</div>

